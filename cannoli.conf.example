# Cannoli Configuration File
# Copy to cannoli.conf and modify as needed

[server]
# Network binding
host = 0.0.0.0
port = 8080

# Worker processes
workers = 5
max_requests = 1000
timeout = 30
backlog = 128

[fastcgi]
# FastCGI mode (for use with nginx, Apache, etc.)
enabled = false
socket = /tmp/cannoli.sock

[log]
# Logging configuration
level = info
# file = /var/log/cannoli.log

[app]
# Application settings
document_root = .
index = index.html
