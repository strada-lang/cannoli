# Static file server with directory listing
# Usage: ./static_server [directory] [port]

# Global static server config
my scalar $g_static = undef;

func handle_static(hash %req) hash {
    my str $method = $req{"method"};
    my str $path = $req{"path"};
    return Cannoli::Static::handle_request($g_static, $method, $path);
}

func main(int $argc, array @argv) int {
    # Default settings
    my str $root = ".";
    my int $port = 8080;

    # Parse command line args
    if ($argc > 1) {
        $root = $argv[1];
    }
    if ($argc > 2) {
        $port = sys::atoi($argv[2]);
    }

    # Create static file server
    $g_static = Cannoli::Static::new();
    $g_static->{"document_root"} = $root;
    $g_static->{"directory_listing"} = 1;

    # Create app
    my scalar $app = Cannoli::App::new();
    $app->{"port"} = $port;

    # Handle all GET requests with static server
    Cannoli::App::get($app, "/.*", \&handle_static);

    say("Serving files from: " . $root);
    say("Directory listing: enabled");
    say("Listening on http://localhost:" . $port);
    say("");

    return Cannoli::App::run($app);
}
