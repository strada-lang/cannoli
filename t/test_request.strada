# t/test_request.strada - Test HTTP request parsing

func test_parse_simple() int {
    say("Testing simple GET request...");

    my str $raw = "GET /hello HTTP/1.1\r\n";
    $raw = $raw . "Host: localhost\r\n";
    $raw = $raw . "User-Agent: Test\r\n";
    $raw = $raw . "\r\n";

    my hash %req = Cannoli::Request::parse($raw);

    if ($req{"method"} ne "GET") {
        say("  FAIL: method should be GET, got " . $req{"method"});
        return 1;
    }

    if ($req{"path"} ne "/hello") {
        say("  FAIL: path should be /hello, got " . $req{"path"});
        return 1;
    }

    if ($req{"http_version"} ne "HTTP/1.1") {
        say("  FAIL: version should be HTTP/1.1");
        return 1;
    }

    say("  PASS");
    return 0;
}

func test_parse_query_string() int {
    say("Testing query string parsing...");

    my str $raw = "GET /search?q=hello&page=1 HTTP/1.1\r\n";
    $raw = $raw . "Host: localhost\r\n";
    $raw = $raw . "\r\n";

    my hash %req = Cannoli::Request::parse($raw);

    if ($req{"path"} ne "/search") {
        say("  FAIL: path should be /search");
        return 1;
    }

    if ($req{"query_string"} ne "q=hello&page=1") {
        say("  FAIL: query_string mismatch");
        return 1;
    }

    my str $q = Cannoli::Request::get_param(%req, "q");
    if ($q ne "hello") {
        say("  FAIL: param q should be 'hello', got '" . $q . "'");
        return 1;
    }

    my str $page = Cannoli::Request::get_param(%req, "page");
    if ($page ne "1") {
        say("  FAIL: param page should be '1', got '" . $page . "'");
        return 1;
    }

    say("  PASS");
    return 0;
}

func test_parse_headers() int {
    say("Testing header parsing...");

    my str $raw = "GET / HTTP/1.1\r\n";
    $raw = $raw . "Host: example.com\r\n";
    $raw = $raw . "Content-Type: application/json\r\n";
    $raw = $raw . "X-Custom-Header: custom value\r\n";
    $raw = $raw . "\r\n";

    my hash %req = Cannoli::Request::parse($raw);

    my str $host = Cannoli::Request::get_header(%req, "Host");
    if ($host ne "example.com") {
        say("  FAIL: Host header should be 'example.com', got '" . $host . "'");
        return 1;
    }

    my str $ct = Cannoli::Request::get_header(%req, "Content-Type");
    if ($ct ne "application/json") {
        say("  FAIL: Content-Type header mismatch");
        return 1;
    }

    # Test case-insensitivity
    my str $ct2 = Cannoli::Request::get_header(%req, "content-type");
    if ($ct2 ne "application/json") {
        say("  FAIL: Header lookup should be case-insensitive");
        return 1;
    }

    say("  PASS");
    return 0;
}

func test_parse_post_body() int {
    say("Testing POST body parsing...");

    my str $body = "name=John&email=john@example.com";
    my str $raw = "POST /submit HTTP/1.1\r\n";
    $raw = $raw . "Host: localhost\r\n";
    $raw = $raw . "Content-Type: application/x-www-form-urlencoded\r\n";
    $raw = $raw . "Content-Length: " . length($body) . "\r\n";
    $raw = $raw . "\r\n";
    $raw = $raw . $body;

    my hash %req = Cannoli::Request::parse($raw);

    if ($req{"method"} ne "POST") {
        say("  FAIL: method should be POST");
        return 1;
    }

    my str $name = Cannoli::Request::get_param(%req, "name");
    if ($name ne "John") {
        say("  FAIL: param name should be 'John', got '" . $name . "'");
        return 1;
    }

    my str $email = Cannoli::Request::get_param(%req, "email");
    if ($email ne "john@example.com") {
        say("  FAIL: param email should be 'john@example.com'");
        return 1;
    }

    say("  PASS");
    return 0;
}

func test_url_decode() int {
    say("Testing URL decoding...");

    my str $decoded = Cannoli::Request::url_decode("hello%20world");
    if ($decoded ne "hello world") {
        say("  FAIL: %20 should decode to space, got '" . $decoded . "'");
        return 1;
    }

    $decoded = Cannoli::Request::url_decode("hello+world");
    if ($decoded ne "hello world") {
        say("  FAIL: + should decode to space");
        return 1;
    }

    $decoded = Cannoli::Request::url_decode("test%3D%26value");
    if ($decoded ne "test=&value") {
        say("  FAIL: %3D%26 should decode to =&");
        return 1;
    }

    say("  PASS");
    return 0;
}

func test_is_methods() int {
    say("Testing is_* methods...");

    my str $get = "GET / HTTP/1.1\r\n\r\n";
    my hash %req_get = Cannoli::Request::parse($get);

    if (Cannoli::Request::is_get(%req_get) != 1) {
        say("  FAIL: is_get should return true for GET request");
        return 1;
    }
    if (Cannoli::Request::is_post(%req_get) != 0) {
        say("  FAIL: is_post should return false for GET request");
        return 1;
    }

    my str $post = "POST / HTTP/1.1\r\n\r\n";
    my hash %req_post = Cannoli::Request::parse($post);

    if (Cannoli::Request::is_post(%req_post) != 1) {
        say("  FAIL: is_post should return true for POST request");
        return 1;
    }

    say("  PASS");
    return 0;
}

func main() int {
    say("=== Cannoli Request Tests ===");
    say("");

    my int $failures = 0;

    $failures = $failures + test_parse_simple();
    $failures = $failures + test_parse_query_string();
    $failures = $failures + test_parse_headers();
    $failures = $failures + test_parse_post_body();
    $failures = $failures + test_url_decode();
    $failures = $failures + test_is_methods();

    say("");
    if ($failures == 0) {
        say("All request tests passed!");
        return 0;
    } else {
        say("" . $failures . " test(s) failed!");
        return 1;
    }
}
